{
    "compilerOptions": {
        "allowJs": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "target": "ES2020",
        "lib": ["ES2020", "DOM"],
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "declaration": true,
        "incremental": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/tests/*",
        "**/src/**/*.spec.ts",
        "**/src/**/*.spec.js"
    ]
}
