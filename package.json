{
  "name": "linediet-appointment-api",
  "version": "1.0.0",
  "description": "한의원 진료 예약 관리 API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "port": 8809,
  "scripts": {
    "!build": "------ build /src to /dist ----",
    "build": "npm run build-ts",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "nodemon": "nodemon --config nodemon-main.json",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,jsx,tsx}' --fix",
    "!start": "------ run in local development ----",
    "start": "npm run build && concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run nodemon\"",
    "dev": "npm run setup:db && LS=1 ts-node src/index.ts",
    "setup:db": "./scripts/start-dynamodb-local.sh",
    "seed:mock": "node scripts/seed-mock-data.js",
    "reset:db": "node scripts/delete-tables.js && npm run setup:db",
    "!server": "----- local에서 serverless로 실행하기 (개발용) -----",
    "server": "AWS_PROFILE=$ENV sls offline start --param='profile='\"$ENV\"'' --stage local",
    "server-local": "npm run build && concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run server\"",
    "server.dev": "ENV=dev npm run server-local",
    "!express": "---- 로컬/개발 서버에서 express로 안정적으로 돌리기 위함 -----",
    "express.dev": "ENV=dev STAGE=local npm run start",
    "!deploy": "-----  빌드후 dist 폴더에 압축한 다음, serverless를 통해서 deploy 실행 -----",
    "deploy.dev": "npm run build && sls deploy --param='profile=dev' --stage dev",
    "deploy.prod": "npm run build && sls deploy --param='profile=prod' --stage prod",
    "!info": "------- print sls info by profile -----",
    "info.dev": "sls info --param='profile=dev' --stage dev",
    "info.prod": "sls info --param='profile=prod' --stage prod",
    "!logs": "------- print logs of serverless by profile -----",
    "logs.dev": "sls logs --param='profile=dev' --stage dev -t --startTime 5m -f lambda",
    "logs.prod": "sls logs --param='profile=prod' --stage prod -t --startTime 5m -f lambda",
    "!test": "------- run self-test with jest -----",
    "pretest": "npm run setup:db",
    "test": "LS=1 jest --config=jest.config.json",
    "test:unit": "LS=1 jest --config=jest.config.json --testPathPattern='spec\\.ts$'",
    "test:integration": "LS=1 jest --config=jest.config.json --testPathPattern='__tests__/integration'",
    "test:coverage": "LS=1 jest --config=jest.config.json --coverage",
    "test:dev": "LS=1 jest --config=jest.config.json --watchAll",
    "test:watch": "LS=1 jest --config=jest.config.json --watchAll",
    "!docs": "------- documentation -----",
    "docs": "typedoc --plugin typedoc-plugin-rename-defaults"
  },
  "author": "Sim Ugeun",
  "license": "MIT",
  "dependencies": {
    "aws-sdk": "^2.1691.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "express": "^4.18.2",
    "moment-timezone": "^0.5.45",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@aws-sdk/client-dynamodb": "^3.936.0",
    "@aws-sdk/lib-dynamodb": "^3.936.0",
    "@cruglobal/serverless-merge-config": "^1.1.0",
    "@types/cors": "^2.8.17",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.12.7",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "codecov": "^3.8.3",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "serverless": "^3.38.0",
    "serverless-aws-documentation": "^1.1.0",
    "serverless-offline": "^13.4.0",
    "serverless-prune-plugin": "^2.0.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-transformer-keys": "^0.4.4",
    "tsconfig-paths": "^4.2.0",
    "ttypescript": "^1.5.15",
    "typedoc": "^0.25.13",
    "typedoc-plugin-markdown": "^3.17.1",
    "typedoc-plugin-rename-defaults": "^0.7.0",
    "typescript": "^5.4.5"
  },
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "appointment",
    "clinic",
    "emr",
    "serverless"
  ]
}
